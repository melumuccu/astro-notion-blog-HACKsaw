---
import type { Post, SelectProperty } from '../lib/interfaces.ts'
import { getTagLink } from '../lib/blog-helpers.ts'
import '../styles/notion-color.css'

export interface Props {
  post: Post
  enableLink: boolean
}

const { post, enableLink = true } = Astro.props
---

<div class="post-tags">
  {
    post.Tags &&
      post.Tags.length > 0 &&
      post.Tags.map((tag: SelectProperty) => {
        if (enableLink) {
          return (
            <a href={getTagLink(tag.name)} class={`tag ${tag.color}`}>
              {tag.name}
            </a>
          )
        }
        return <span class={`tag ${tag.color}`}>{tag.name}</span>
      })
  }
</div>

<style>
  .post-tags {
    display: flex;
    flex-shrink: 0;
    flex-wrap: wrap;
    gap: 6px;
    font-size: 0.9rem;
  }

  .post-tags a,
  .post-tags span {
    display: flex;
    flex-shrink: 1;
    align-items: center;
    min-width: 0;
    height: fit-content;
    padding: 2px 6px;
    line-height: 1.2;
    color: rgb(50 48 44);
    background: rgb(227 226 224 / 50%);
    border-radius: 3px;
  }
</style>
