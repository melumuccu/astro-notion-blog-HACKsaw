---
const snsLinkMap = {
  x: 'https://twitter.com/sawa20221022',
  instagram: '',
  github: 'https://github.com/melumuccu',
}
type Props = {
  sns: keyof typeof snsLinkMap
}
const { sns } = Astro.props
---

<li>
  <a href={snsLinkMap[sns]}
    ><img
      src={`src/icons/logos/${sns}.png`}
      width="20"
      height="20"
      alt={`go to ${sns}`}
    />
  </a>
</li>

<style>
  a {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
  }
</style>
